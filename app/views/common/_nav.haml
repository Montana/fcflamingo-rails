                %li
                  = link_to users_path do
                    Users
              %li.divider
              %li
                = link_to "Log out", logout_path, method: "delete"
        - if controller?("home") && action?("home")
          %span
        -else
          #navSocial
            %ul
              %li.social
                = link_to "https://www.facebook.com/flamingolabs", target: "_blank" do
                  %i.fa.fa-facebook
              %li.social
                = link_to "https://instagram.com/fcflamingo", target: "_blank" do
                  %i.fa.fa-instagram
              %li.social
                = link_to "https://twitter.com/fcflamingo", target: "_blank" do
                  %i.fa.fa-twitter
